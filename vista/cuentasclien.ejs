<body>
    <header id="encabezado">
        <img src="img/logo_large.png" class="logo-menu">
        <div class="encacuadro">
          <p><%= uss %></p>
          <img src="img/logo_small_icon_only.png" alt="">
          <a href="cerrar">Cerrar sesion</a>
      </div>     
      </header>
  
  <div class="menuvolver"><a href="/vistacliente">volver al Menu principal</a></div>

    <from action="" name="frm" id="frm">
        <table class="table" id="tablecuen">
            <thead>
                <tr>
                    <th>CODIGO</th>
                    <th>DOCUMENTO</th>
                    <th>TIPO </th>
                    <th>SALDO</th>
                    <th>RETIRAR</th>
                    <th>CONSIGNAR</th>
                    <th>TRASNFERIR</th>
                </tr>
            </thead>

            <tbody>
             <% datos.forEach(function (datos){ %>    
                <tr>
                    <td><input type="text" value="<%=datos.CueCod%>" name="cod" id="cod" class="cod"></td>
                    <td><input type="text" value="<%=datos.CueCliDoc%>" name="doc" id="doc" class="doc"></td>
                    <td><input type="text" value="<%=datos.CueTipo%>" name="tip" id="tip" class="tip"></td>
                    <td><input type="text" value="<%=datos.CueSaldo%>" name="sal" id="sal" class="sal"></td>
                    <td><a href="/retirar"><input type="submit" value="Retirar" name="btnreti" id="btnreti" class="btnreti"></a></td>
                    <td><a href="/consignar"><input type="submit" value="Consignar" name="btncon" id="btncon" class="btncon"></a></td>
                    <td><a href="/transferir"><input type="submit" value="Transferir" name="btncon" id="btncon" class="btncon"></a></td>
                </tr>
             <%})%>
            </tbody>
        </table>
        <div class="espacio">.</div>
